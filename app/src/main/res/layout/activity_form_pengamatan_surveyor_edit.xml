<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragmentsCMO.Edit_Form_Survey.FormPengamatanSurveyorEdit">

<LinearLayout
    style="@style/parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            style="@style/textJudul"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_weight="9"
            android:text="@string/hasilPengamatanUsaha"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        style="@style/linearExpandTextVertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/viewParent.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/pertanyaanDuaDelapan" />
        <Spinner
            android:id="@+id/pertanyaanduaDelapan"
            style="@style/parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp" />
        <EditText
            android:id="@+id/jawabanDuaDelapan"
            style="@style/parent"
            android:inputType="text"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        style="@style/linearExpandTextVertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/viewParent.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/pertanyaanDuaSembilan" />
        <Spinner
            android:id="@+id/pertanyaanDuaSembilan"
            style="@style/parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp" />
        <EditText
            android:id="@+id/jawabanDuaSembilan"
            style="@style/parent"
            android:inputType="text"
            android:visibility="gone"/>
    </LinearLayout>
    <LinearLayout
        style="@style/linearExpandTextVertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/viewParent.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/pertanyaanTigaPuluh" />
        <Spinner
            android:id="@+id/pertanyaanTigaPuluh"
            style="@style/parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp" />
    </LinearLayout>
    <LinearLayout
        style="@style/linearExpandTextVertical"
        android:layout_height="wrap_content">

        <TextView
            style="@style/viewParent.TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="@string/pertanyaanTigaSatu" />
        <Spinner
            android:id="@+id/pertanyaanTigaSatu"
            style="@style/parent"
            android:layout_width="wrap_content"
            android:layout_margin="5dp" />

    </LinearLayout>
    <LinearLayout
        style="@style/linearExpandText"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonSubmitpengamatanSurveyor"
            style="@style/loginButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="SUBMIT" />
    </LinearLayout>
</LinearLayout>

</ScrollView>