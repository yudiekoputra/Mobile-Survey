<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".fragmentsCMO.SurveyUsahaActivity">

<LinearLayout
    style="@style/parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/textView2"
        style="@style/textJudul"
        android:text="Survey Usaha/Kantor"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/layoutExpandKondisiUsaha"
        style="@style/expandLayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/linearExpandSpinner"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                style="@style/viewParent.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="@string/pertanyaanDuaDelapan" />

            <Spinner
                android:id="@+id/pertanyaanDuaDelapan"
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_margin="5dp" />
            <EditText
                android:id="@+id/jawabanDuaDelapan"
                style="@style/parent"
                android:inputType="text"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandSpinner"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                style="@style/viewParent.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="@string/pertanyaanDuaSembilan" />

            <Spinner
                android:id="@+id/pertanyaanDuaSembilan"
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_margin="5dp" />
            <EditText
                android:id="@+id/jawabanDuaSembilan"
                style="@style/parent"
                android:inputType="text"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandSpinner"
            android:orientation="vertical">

            <TextView
                style="@style/viewParent.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="@string/pertanyaanTigaPuluh" />

            <Spinner
                android:id="@+id/pertanyaanTigaPuluh"
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_margin="5dp" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandSpinner"
            android:orientation="vertical">

            <TextView
                style="@style/viewParent.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:text="@string/pertanyaanTigaSatu" />

            <Spinner
                android:id="@+id/pertanyaanTigaSatu"
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_margin="5dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:text="Wawancara Narasumber :"/>

    <TextView
        android:id="@+id/barExpandNarasumber1"
        android:layout_marginTop="5dp"
        style="@style/expandBarText"
        android:text="Narasumber 1"/>
    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/layoutNarasumber1"
        style="@style/expandLayout"
        app:ael_expanded="false"
        app:ael_interpolator="accelerate"
        app:ael_orientation="vertical">

        <LinearLayout style="@style/linearExpandText">

            <TextView
                style="@style/viewParent.TextView"
                android:text="@string/namaNarasumber" />

            <TextView
                style="@style/viewParent.TitikDua"
                android:text=":" />

            <EditText
                android:id="@+id/namaNarasumber1"
                style="@style/viewParent.EditText"
                android:hint="@string/namaNarasumber"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandSpinner"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                style="@style/viewParent"
                android:text="@string/pertanyaanTigaDua" />

            <Spinner
                android:id="@+id/pertanyaanTigaDua"
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/jawabanTigaDua"
                style="@style/parent"
                android:inputType="text"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandSpinner"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                style="@style/viewParent"
                android:text="@string/pertanyaanTigaTiga" />

            <Spinner
                android:id="@+id/pertanyaanTigaTiga"
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_margin="5dp" />

            <LinearLayout style="@style/linearExpandText">

                <TextView
                    style="@style/viewParent.TextView"
                    android:text="@string/jabatan" />

                <TextView
                    style="@style/viewParent.TitikDua"
                    android:text=":" />

                <EditText
                    android:id="@+id/jawabanTigaTiga"
                    style="@style/viewParent.EditText"
                    android:inputType="text" />
            </LinearLayout>

        </LinearLayout>

    </com.github.aakira.expandablelayout.ExpandableLinearLayout>

    <TextView
        android:id="@+id/barExpandNarasumber2"
        style="@style/expandBarText"
        android:text="Narasumber 2"/>
    <com.github.aakira.expandablelayout.ExpandableLinearLayout
        android:id="@+id/layoutNarasumber2"
        style="@style/expandLayout"
        app:ael_expanded="false"
        app:ael_interpolator="accelerate"
        app:ael_orientation="vertical">

        <LinearLayout style="@style/linearExpandText">

            <TextView
                style="@style/viewParent.TextView"
                android:text="@string/namaNarasumber" />

            <TextView
                style="@style/viewParent.TitikDua"
                android:text=":" />

            <EditText
                android:id="@+id/namaNarasumber2"
                style="@style/viewParent.EditText"
                android:hint="@string/namaNarasumber"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandSpinner"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                style="@style/viewParent"
                android:text="@string/pertanyaanTigaEmpat" />

            <Spinner
                android:id="@+id/pertanyaanTigaEmpat"
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_margin="5dp" />

            <EditText
                android:id="@+id/jawabanTigaEmpat"
                style="@style/parent"
                android:inputType="text"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            style="@style/linearExpandSpinner"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                style="@style/viewParent"
                android:text="@string/pertanyaanTigaLima" />

            <Spinner
                android:id="@+id/pertanyaanTigaLima"
                style="@style/parent"
                android:layout_width="wrap_content"
                android:layout_margin="5dp" />

            <LinearLayout style="@style/linearExpandText">

                <TextView
                    style="@style/viewParent.TextView"
                    android:text="@string/jabatan" />

                <TextView
                    style="@style/viewParent.TitikDua"
                    android:text=":" />

                <EditText
                    android:id="@+id/jawabanTigaLima"
                    style="@style/viewParent.EditText"
                    android:inputType="text" />
            </LinearLayout>


        </LinearLayout>

    </com.github.aakira.expandablelayout.ExpandableLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/BarTextOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryTextColor"
            android:text="Foto Kondisi Fisik Usaha/Kantor"
            android:textColor="@color/warnaPutih" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageUsaha1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_photo_camera"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/imageUsaha2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_photo_camera"
                android:padding="5dp"/>
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0"
            android:visibility="gone" />
        <Button
            android:id="@+id/buttonCamera5"
            style="@style/loginButton"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Camera" />
        <Button
            android:id="@+id/buttonCamera6"
            style="@style/loginButton"
            android:visibility="gone"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Camera" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/BarTextOnly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryTextColor"
            android:text="Foto Kondisi Jalan Depan Usaha/Kantor"
            android:textColor="@color/warnaPutih" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageJalanUsaha1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_photo_camera"
                android:padding="5dp"/>
            <ImageView
                android:id="@+id/imageJalanUsaha2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_photo_camera"
                android:padding="5dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/buttonCamera7"
            style="@style/loginButton"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Camera" />
        <Button
            android:id="@+id/buttonCamera8"
            style="@style/loginButton"
            android:visibility="gone"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Camera" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat : "/>
        <TextView
            android:id="@+id/namaAlamatUsaha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude : "/>
        <TextView
            android:id="@+id/latitudeUsaha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude : "/>
        <TextView
            android:id="@+id/longitudeUsaha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"/>
    </LinearLayout>


    <LinearLayout
        style="@style/linearExpandText"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/buttonBack"
            style="@style/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="BACK" />

        <Button
            android:id="@+id/buttonSubmitUsaha"
            style="@style/loginButton"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="SUBMIT" />
    </LinearLayout>

</LinearLayout>

</ScrollView>